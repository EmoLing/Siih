<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="UIClient.Views.Reports.Act_1_3.SelectComplexesHardwareDialog"
        Title="SelectComplexesHardwareDialog"
		xmlns:vm="using:UIClient.ViewModels.Reports.Act_1_3"
		x:DataType="vm:SelectComplexesHardwareDialogViewModel">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,20,0,0">
			<Button Content="Добавить выбранное" Command="{Binding AddComplexesHardwareCommand}" Margin="0,0,10,0" />
			<Button Content="Отмена" Command="{Binding CancelCommand}"  />
		</StackPanel>
		<StackPanel Grid.Row="1" Margin="10">
			<TextBlock Text="Доступное оборудование:" />
			<ListBox ItemsSource="{Binding ComplexesHardware}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<CheckBox Content="{Binding ComplexHardware.Name}" IsChecked="{Binding IsSelected}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</Grid>
</Window>
