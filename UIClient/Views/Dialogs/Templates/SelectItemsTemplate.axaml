<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="UIClient.Views.Dialogs.SelectDialog.SelectItemsTemplate"
			 xmlns:vm="using:UIClient.ViewModels.Dialogs.SelectDialog"
			 x:DataType="vm:SelectItemsViewModel">
	<Window.DataContext>
		<vm:SelectItemsViewModel />
	</Window.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,20,0,0">
			<Button Content="Добавить выбранное" Command="{Binding AddCommand}" Margin="0,0,10,0" />
			<Button Content="Отмена" Command="{Binding CancelCommand}"  />
		</StackPanel>
		<StackPanel Grid.Row="1" Margin="10">
			<TextBlock Text="Доступное оборудование:" />
			<ListBox ItemsSource="{Binding Items}" Focusable="True" SelectedItem="{Binding FocusedObject}" Height="300">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<CheckBox IsVisible="{Binding RelativeSource={RelativeSource AncestorType=Window},
									  Path=((vm:SelectItemsViewModel)DataContext).SupportCheckBoxSelected}"
									  IsChecked="{Binding IsSelected}" />
							<TextBlock Text="{Binding TransferObject.Name}" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</Grid>
</Window>