<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:UIClient.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UIClient.Views.UserEditDialog"
        Title="UserEditDialog"
		x:DataType="vm:UserEditDialogViewModel">
	<StackPanel>
		<TextBlock Text="Фамилия" />
		<TextBox Text="{Binding LastName}"/>

		<TextBlock Text="Имя" />
		<TextBox Text="{Binding FirstName}"/>

		<TextBlock Text="Отчество" />
		<TextBox Text="{Binding Surname}"/>

		<TextBlock Text="Должность" />
		<ComboBox ItemsSource="{Binding JobTitles}" SelectedItem="{Binding SelectedJobTitle}" />

		<TextBlock Text="Кабинет" />
		<ComboBox ItemsSource="{Binding Cabinets}" SelectedItem="{Binding SelectedCabinet}" />
	</StackPanel>
</Window>
