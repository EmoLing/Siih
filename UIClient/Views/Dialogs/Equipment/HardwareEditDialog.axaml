<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:vm="using:UIClient.ViewModels.Dialogs.Equipment"
        x:Class="UIClient.Views.Dialogs.Equipment.HardwareEditDialog"
        Title="HardwareEditDialog"
		x:DataType="vm:HardwareEditDialogViewModel">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		
		<StackPanel Grid.Row="0" Margin="5">
			<TextBlock Text="Наименование" />
			<TextBox Margin="0 2 0 0" Text="{Binding Name}"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Margin="5">
			<TextBlock Text="Серийный номер" />
			<TextBox Margin="0 2 0 0" Text="{Binding  SerialNumber}"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Margin="5">
			<TextBlock Text="Article" />
			<TextBox Margin="0 2 0 0" Text="{Binding Article}"/>
		</StackPanel>

		<StackPanel Grid.Row="3" Margin="5">
			<TextBlock Text="Дата создания" />
			<DatePicker Margin="0 2 0 0" DayFormat="ddd dd" SelectedDate="{Binding DateCreate}" />
		</StackPanel>

		<Grid Grid.Row="4" Margin="5">
			<Grid.RowDefinitions>
				<RowDefinition Height="20" />
				<RowDefinition Height="40" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" Text="ПО" />
			<WrapPanel Grid.Row="1">
				<Button Content="Добавить" Command="{Binding AddSoftwareCommand}" Width="100"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
				<Button Content="Удалить" Command="{Binding DeleteSoftwareCommand}" Width="100"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
			</WrapPanel>
			<ListBox Grid.Row="2" ItemsSource="{Binding Softwares}" SelectedItem="{Binding SelectedSoftware}" />
		</Grid>

		<StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5 10 0 10">
			<Button Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
					Content="Сохранить" Command="{Binding SaveCommand}" Margin="0 0 10 0" />

			<Button Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
					Content="Отмена" Command="{Binding CancelCommand}" />
		</StackPanel>
	</Grid>
</Window>
